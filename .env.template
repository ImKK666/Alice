# AI人格核心 - RAG系统 v7.0 (多接口版)

# Discord Bot 配置 (用于 discord)
# Discord Bot令牌，必填
DISCORD_BOT_TOKEN=your_discord_bot_token_here
# Discord Owner的用户ID，必填
DISCORD_OWNER_ID=your_discord_owner_id_here

# DeepSeek API 配置 (用于LLM)
# DeepSeek平台API密钥，必填
DEEPSEEK_API_KEY=sk_your_deepseek_api_key_here
# DeepSeek平台基础URL，可选，默认为DeepSeek API
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
# LLM模型名称，可选，默认为deepseek-chat
LLM_MODEL=deepseek-chat

# SiliconFlow API 配置 (用于嵌入模型和重排序)
# 硅基流动平台API密钥，必填
SILICONFLOW_API_KEY=sf_your_siliconflow_api_key_here
# 硅基流动平台基础URL，可选，默认为硅基流动API
SILICONFLOW_BASE_URL=https://api.siliconflow.cn/v1
# 嵌入模型名称，可选，默认为Pro/BAAI/bge-m3
EMBEDDING_MODEL=Pro/BAAI/bge-m3
# 重排序模型名称，可选，默认为Pro/BAAI/bge-reranker-v2-m3
RERANKER_MODEL=Pro/BAAI/bge-reranker-v2-m3
# 嵌入向量维度，可选，默认为1024
EMBEDDING_DIMENSION=1024

# Qdrant 向量数据库配置
# Qdrant数据库URL，可选，默认为本地运行的Qdrant
QDRANT_URL=http://localhost:6333
# Qdrant集合名称，可选，默认为rag_deno_collection
QDRANT_COLLECTION_NAME=rag_deno_collection

# RAG 流程参数 (可选)
# 初始检索数量
RAG_INITIAL_RETRIEVAL_LIMIT=15
# 重排序后选取的记忆数量
RAG_RERANK_TOP_N=3
# 重排序失败或无结果时的回退数量
RAG_FALLBACK_TOP_N=3
# 获取最近记忆的数量
RAG_RECENT_LTM_LIMIT=2
# 最终放入Prompt的LTM数量上限
RAG_MAX_MEMORIES_IN_PROMPT=3